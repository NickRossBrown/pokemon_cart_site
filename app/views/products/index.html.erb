<div class="container">

  <div class="jumbotron">
    <h1>Pokemon Bazaar</h1>
  </div>
  <hr>
  <h2>Cards</h2>
    <h2>Pokemon Name: <%=@pokemon_name%></h2>
    <h3>Pokedex #: <%= @pokemon_num %></h3>
    <h3>Image: <%= image_tag @pokemon_img %></h3>

   <% @products.each do |product| %>
    <p><%= product.name %> | <%= number_to_currency product.price %></p>
    <%= form_for @order_item do |f| %>
      <%= f.hidden_field :product_id, value: product.id %>
      <%= f.number_field :quantity %>
      <%= f.submit "Add to cart" %>
    <% end %></p>
  <% end %>

  <p><%= link_to "Add a new product", new_product_path %></p>

</div>

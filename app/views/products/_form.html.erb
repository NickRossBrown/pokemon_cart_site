<%= render "layouts/errors", :object => @product %>

<%= form_for @product, remote: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <hr>
  <%= f.label :price %>
  <%= f.number_field :price %>
  <hr>
  <%= f.label :image_tag%>
  <%= f.number_field :image_tag  %>
  <hr>
  <%= f.submit %>
<% end %>
